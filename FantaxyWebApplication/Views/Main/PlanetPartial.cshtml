@model IList<SearchModel>

<form id="PlanetForm" asp-controller="Main" asp-action="RedirectToPlanetPage">
    @foreach (var planet in Model)
    {
        string back = planet.Profile.Replace("\\", "/");
        <div class="Item" id="@Html.Raw(planet.Id)" style="background: @($"url(\"{back}\")");
        background-size: cover;
        background-position: center;">
            <img src="@planet.Avatar" />
            <input type="text" class="h4" readonly maxlenght="15" value="@Html.Raw(planet.Name)" />
            @{
                switch(planet.RoleOrStatus)
                {
                    case 1: // Публичный
                        <span class="roleStatus"> Публичный </span>
                        <span class="material-symbols-outlined" style="background: green">
                            groups
                        </span>
                        break;
                    case 2: // Частный
                        <span class="roleStatus"> Частный </span>
                        <span class="material-symbols-outlined" style="background: red">
                            lock
                        </span>
                        break;
                }
            }
            <input type="hidden" name="IdPlanet" value="@Html.Raw(@planet.Id)" />
        </div>
    }
</form>

<script>
    $(document).ready(function () {
        $("div.Item").click(function () {
            $("#PlanetForm").submit();
        });
    });
</script>

