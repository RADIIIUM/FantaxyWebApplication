@model FantaxyWebApplication.Models.Entities.User

@{
    ViewData["Title"] = "Autorization";
}
<form method="post" asp-controller="Home" asp-action="Index">
    <div class="jumbotron d-flex align-items-center min-vh-100">
        <div class="container text-center">
        <div class="row justify-content-center">
        <div class="col-md-6">
                    <img src="~/img/icon/FantaxyBigIcon.png" class="medium-image" />
                    <h4 class="sansation  text-light"> Логин </h4>

                    @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @class = "-input -fillInput", placeholder = "Логин" } }))
                    @Html.ValidationMessageFor(model => model.UserLogin)
        </div>
        </div>
        <div class="row justify-content-center">
        <div class="col-md-6">
                    <h4 class="sansation text-light"> Пароль </h4>
                    @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "-input -fillInput", placeholder = "Пароль" } }))
                    @Html.ValidationMessageFor(model => model.UserPassword)
        </div>
        </div>
        <h1></h1>
            <div class="row justify-content-center">
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="-btn -dark -big" type="submit"> SIGN IN </button>
                    <div class="cont2">
                        <a asp-action="Registration"> Регистрация </a>
                    </div>
            </div>
    </div>
            </div>
</div>
</form>




